# FamilyQuest Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL="postgresql://user:password@localhost:5432/familyquest?schema=public"

# =============================================================================
# JWT & AUTHENTICATION
# =============================================================================
JWT_SECRET="your-super-secret-jwt-key-min-32-characters-long"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# Bcrypt salt rounds (10-12 recommended)
BCRYPT_ROUNDS=10

# =============================================================================
# SERVER
# =============================================================================
NODE_ENV=development
PORT=3000
HOST=localhost

# CORS allowed origins (comma separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:8000,https://yourdomain.com"

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# =============================================================================
# FEATURES
# =============================================================================
# Points awarded per passed day
POINTS_PER_PASSED_DAY=10

# Bonus points for ideal week
IDEAL_WEEK_BONUS=20

# Maximum days for history
MAX_HISTORY_DAYS=30

# =============================================================================
# EMAIL (Optional - for notifications)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM="FamilyQuest <noreply@familyquest.com>"

# =============================================================================
# PUSH NOTIFICATIONS (Optional)
# =============================================================================
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@familyquest.com

# =============================================================================
# REDIS (Optional - for caching)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# SENTRY (Optional - for error tracking)
# =============================================================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# S3 / CLOUD STORAGE (Optional - for avatars/files)
# =============================================================================
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=familyquest-uploads

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token

# =============================================================================
# SECURITY
# =============================================================================
# Session secret for express-session
SESSION_SECRET=your-session-secret-min-32-chars

# Cookie settings
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Skip email verification in dev
SKIP_EMAIL_VERIFICATION=true

# Enable debug mode
DEBUG=false

# Seed database on start
AUTO_SEED=false

# Optional seed account (used when AUTO_SEED=true)
SEED_PARENT_EMAIL=rodzic@example.com
SEED_PARENT_PASSWORD=change-me-now-123
SEED_PARENT_PIN=1234
SEED_FAMILY_NAME=Moja Rodzina
